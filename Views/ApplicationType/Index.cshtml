@model IEnumerable<StoneStoreMVC.Models.ApplicationType>
@{
    ViewData["Title"] = "Application Types";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Application Type List</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                Create New Application Type
            </a>
        </div>
    </div>
    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ApplicationType Name
                    </th>                    
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="70%">@obj.Name</td>

                        <td class="text-center">
                            <div class="w-100 btn-group " role="group">


                                @* <a asp-controller="Category" asp-route-Id="@(obj.Id)" asp-action="Edit" class="btn btn-primary">
                                        <i class="fas fa-edit"></i> &nbsp; Edit
                                    </a>

                                    <a asp-controller="Category" asp-route-Id="@(obj.Id)" asp-action="Delete" class="btn btn-danger">
                                        <i class="fas fa-trash"></i>&nbsp;  Delete
                                    </a>*@

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No application type exists !</p>
    }


</div>
